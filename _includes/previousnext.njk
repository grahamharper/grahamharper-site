<ul class="links-nextprev grid grid--50-50">
    {%- if previousPost %}
        <li>
            <span class="links-nextprev__label">Previous</span>
            <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
        </li>
    {% endif %}
    {%- if nextPost %}
        <li>
            <span class="links-nextprev__label">Next</span>
            <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
        </li>
    {% endif %}
</ul>